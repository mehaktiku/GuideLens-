@page
@model GuideLens.Pages.ContactModel
@{
    ViewData["Title"] = "Contact Us";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-8">

            <div class="mb-4">
                <h1 class="gl-page-title">Contact Us</h1>
                <p class="text-muted mb-0">Have feedback or a question? Send it here.</p>
            </div>

            @if (Model.Success)
            {
                <div class="alert alert-success" role="status">
                    ✅ Thanks! Your message was received.
                </div>
            }

            <div class="card gl-card">
                <div class="card-body p-4 p-md-5">
                    <form method="post">
                        <div class="row g-3">

                            <div class="col-12 col-md-6">
                                <label asp-for="Input.Name" class="form-label"></label>
                                <input asp-for="Input.Name" class="form-control" placeholder="Your full name" />
                                <span asp-validation-for="Input.Name" class="text-danger"></span>
                            </div>

                            <div class="col-12 col-md-6">
                                <label asp-for="Input.Email" class="form-label"></label>
                                <input asp-for="Input.Email" class="form-control" placeholder="name@email.com" />
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>

                            <div class="col-12">
                                <label asp-for="Input.Subject" class="form-label"></label>
                                <input asp-for="Input.Subject" class="form-control" placeholder="What is this about?" />
                                <span asp-validation-for="Input.Subject" class="text-danger"></span>
                            </div>

                            <div class="col-12">
                                <label asp-for="Input.Message" class="form-label"></label>
                                <textarea asp-for="Input.Message" class="form-control" rows="6" placeholder="Write your message..."></textarea>
                                <span asp-validation-for="Input.Message" class="text-danger"></span>
                            </div>

                            <div class="col-12 d-flex justify-content-end pt-2">
                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-send-fill me-2" aria-hidden="true"></i>
                                    Send message
                                </button>
                            </div>

                        </div>
                    </form>
                </div>
            </div>

            <p class="text-muted mt-3 mb-0">
                We typically respond within 1–2 business days.
            </p>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

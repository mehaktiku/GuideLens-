<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GuideLens</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GuideLens.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <!-- Clean, professional navbar -->
        <nav class="navbar navbar-expand-md navbar-light bg-white border-bottom shadow-sm mb-0">
            <div class="container">
                <a class="navbar-brand fw-bold" asp-area="" asp-page="/Index">GuideLens</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav"
                        aria-controls="mainNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNav">
                    <ul class="navbar-nav me-auto mb-2 mb-md-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Cities">Cities</a>
                        </li>
                    </ul>

                    <div class="d-none d-md-flex small text-muted">
                        <span class="me-3">Curated</span>
                        <span class="me-3">Offline-first</span>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <!-- No forced container here so pages can do full-bleed (hero) when needed -->
    <main role="main" class="pb-0">
        @RenderBody()
    </main>

    <footer class="footer text-muted mt-4">

        <div class="container py-3">
            &copy; 2025 - GuideLens -
            <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

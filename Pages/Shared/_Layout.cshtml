<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GuideLens</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GuideLens.styles.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Cantora+One&display=swap" rel="stylesheet">

</head>
<body>
    <header>
        <!-- Clean, professional navbar -->
        <header>
            <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom shadow-sm gl-nav">
                <div class="container-xl">
                    <!-- Brand -->
                    <a class="navbar-brand d-flex align-items-center gap-2" asp-page="/Index">
                        <img src="~/img/logo/guide-lens.png"
                             asp-append-version="true"
                             alt="Guide Lens logo"
                             class="gl-logo gl-logo-ring"
                             width="44" height="44" loading="eager" decoding="async">
                        <span class="gl-brand-wordmark">Guide Lens</span>
                    </a>



                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav"
                            aria-controls="mainNav" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <!-- Links + right text -->
                    <div class="collapse navbar-collapse justify-content-between" id="mainNav">
                        <ul class="navbar-nav ms-3">
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-page="/Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-page="/Cities">Cities</a>
                            </li>
                        </ul>

                        <div class="navbar-text d-none d-lg-flex gap-3 small text-muted">
                            <span>Curated</span>
                            <span>Offline-first</span>
                        </div>
                    </div>
                </div>
            </nav>
        </header>


    <!-- No forced container here so pages can do full-bleed (hero) when needed -->
    <main role="main" class="pb-0">
        @RenderBody()
    </main>

    <footer class="footer text-muted mt-4">
        <div class="container py-3">
            &copy; 2025 - GuideLens -
            <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
